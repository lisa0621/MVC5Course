@model MVC5Course.Models.NewProductVM

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@ViewData["MyName"]
<hr />
@ViewBag.MyTitle

<hr />
<table class="table">
    <tr>
        <td>商品編號</td>
        <td>商品名稱</td>
        <td>商品價格</td>
    </tr>

    @foreach (var item in (List<MVC5Course.Models.Product>)ViewBag.Products)
    { 
        <tr>
